<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/texte_numero_inscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Numéro d'inscription : 5151"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/texte_ville_depart"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:text="Départ : Matane"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/texte_ville_arrive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Arrivé : Matane"
            android:textAlignment="textEnd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/texte_date_depart"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Date : 2017-05-27"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/texte_heure_depart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Heure départ : 15:50"
            android:textAlignment="textEnd" />
    </LinearLayout>

</LinearLayout>