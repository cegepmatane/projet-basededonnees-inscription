<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.qc.cqmatane.informatique.projet_basededonnees_inscription.VueInscriptionTicket">

    <TextView
        android:id="@+id/affichage_vue_inscription_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Votre Ticket :"
        android:textSize="35sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="88dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/affichage_vue_inscription_numero_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="192dp"
        android:layout_marginTop="70dp"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/affichage_vue_inscription_ticket" />

    <TextView
        android:id="@+id/affichage_vue_inscription_prix_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prix :"
        android:textSize="24sp"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toBottomOf="@+id/affichage_vue_inscription_numero_ticket"
        android:layout_marginLeft="166dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/affichage_vue_inscription_prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="192dp"
        android:layout_marginTop="63dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/affichage_vue_inscription_prix_ticket" />
</android.support.constraint.ConstraintLayout>
